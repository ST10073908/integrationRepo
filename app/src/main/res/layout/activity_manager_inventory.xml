<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FDF9"
    android:padding="16dp">

    <!-- Total Inventory Title -->
    <TextView
        android:id="@+id/inventory_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="INVENTORY"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/total_inventory_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Inventory"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp"/>

    <!-- Card 1 - Batches -->
    <LinearLayout
        android:id="@+id/cardChickenBatches"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_chicken"
            android:contentDescription="Chicken Image"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvChickenBatches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 Batches"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvChickenBatchDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest: 22 September"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Card 2 - Meat -->
    <LinearLayout
        android:id="@+id/cardMeatProduction"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_meat"
            android:contentDescription="Meat Image"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvMeatProduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 Kg"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvMeatProductionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest: 22 September"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Card 3 - Eggs -->
    <LinearLayout
        android:id="@+id/cardEggProduction"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_egg"
            android:contentDescription="Eggs Image"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvEggProduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35 Dozen"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvEggProductionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest: 22 September"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Card 4 - Feed -->
    <LinearLayout
        android:id="@+id/cardFeed"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_feed"
            android:contentDescription="Feed Image"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvFeedQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Kg"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvFeedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest: 22 September"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
